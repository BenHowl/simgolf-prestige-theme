
{{ 'section-footer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .footer {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient">
  <div class="footer__content page-width">
    <div class="footer__grid">
      {%- if section.settings.show_company_info -%}
        <div class="footer__column footer__column--company">
          {%- if section.settings.logo != blank -%}
            <div class="footer__logo-wrapper">
              {%- assign logo_alt = section.settings.logo.alt | default: shop.name | escape -%}
              {{ section.settings.logo | image_url: width: section.settings.logo_width | image_tag:
                class: 'footer__logo',
                widths: '50, 100, 150, 200, 250, 300',
                height: section.settings.logo.height,
                width: section.settings.logo.width,
                alt: logo_alt
              }}
            </div>
          {%- else -%}
            <div class="footer__logo-text h4">{{ shop.name }}</div>
          {%- endif -%}

          {%- if section.settings.company_description != blank -%}
            <div class="footer__company-description rte">{{ section.settings.company_description }}</div>
          {%- endif -%}

          {%- if section.settings.show_social -%}
            <ul class="footer__social-list list-unstyled">
              {%- if settings.social_facebook_link != blank -%}
                <li class="footer__social-item">
                  <a href="{{ settings.social_facebook_link }}" class="footer__social-link" aria-describedby="a11y-external-message">
                    <span class="visually-hidden">Facebook</span>
