              {%- if settings.social_twitter_link != blank -%}
                <li class="footer__social-item">
                  <a href="{{ settings.social_twitter_link }}" class="footer__social-link" aria-describedby="a11y-external-message">
                    <span class="visually-hidden">Twitter</span>
                    <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M22.4592 6C21.6896 6.35 20.8624 6.58 19.9968 6.69C20.8952 6.16 21.5672 5.31 21.8792 4.31C21.0512 4.81 20.1336 5.16 19.1576 5.36C18.3688 4.5 17.2608 4 16.0016 4C13.5968 4 11.6616 5.92 11.6616 8.29C11.6616 8.63 11.7016 8.96 11.7776 9.27C8.19199 9.09 5.0176 7.38 2.9136 4.79C2.5336 5.42 2.3176 6.16 2.3176 6.94C2.3176 8.43 3.0976 9.75 4.2896 10.5C3.6176 10.5 2.9616 10.3 2.4016 10V10.03C2.4016 12.11 3.8816 13.85 5.8176 14.24C5.4576 14.34 5.0576 14.39 4.6416 14.39C4.3616 14.39 4.0816 14.36 3.8176 14.31C4.3776 16 5.9616 17.26 7.8576 17.29C6.4016 18.45 4.5376 19.13 2.5216 19.13C2.1616 19.13 1.8176 19.11 1.4816 19.07C3.4016 20.29 5.6816 21 8.1216 21C16.0016 21 20.3296 14.46 20.3296 8.79C20.3296 8.6 20.3296 8.42 20.3176 8.23C21.1616 7.63 21.8816 6.87 22.4592 6Z" fill="currentColor"/>
                    </svg>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_pinterest_link != blank -%}
                <li class="footer__social-item">
                  <a href="{{ settings.social_pinterest_link }}" class="footer__social-link" aria-describedby="a11y-external-message">
                    <span class="visually-hidden">Pinterest</span>
                    <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 2C6.477 2 2 6.477 2 12C2 17.523 6.477 22 12 22C17.523 22 22 17.523 22 12C22 6.477 17.523 2 12 2ZM13.41 15.458C12.604 15.397 12.283 15.025 11.676 14.662C11.35 16.066 10.972 17.413 9.835 18.187C9.408 15.924 10.218 14.263 10.573 12.517C9.96 11.458 10.695 9.125 12.044 9.672C13.7 10.359 10.466 14.047 12.644 14.486C14.906 14.944 15.818 10.371 14.329 8.858C12.2 6.695 8.256 8.991 8.798 12.127C8.935 12.909 9.769 13.144 9.143 14.191C7.5 13.879 6.969 12.585 7.04 10.863C7.154 8.074 9.465 6.113 11.943 5.863C15.066 5.553 17.988 7.09 18.344 10.046C18.75 13.414 16.835 17.107 13.41 16.908C13.41 16.908 13.41 15.458 13.41 15.458Z" fill="currentColor"/>
                    </svg>
                  </a>
                </li>
              {%- endif -%}
            </ul>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div class="footer__column footer__column--menu" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h2 class="footer__heading h5">{{ block.settings.heading | escape }}</h2>
              {%- endif -%}

              {%- if block.settings.menu != blank -%}
                <ul class="footer__menu list-unstyled">
                  {%- for link in block.settings.menu.links -%}
                    <li class="footer__menu-item">
                      <a href="{{ link.url }}" class="footer__menu-link{% if link.current %} footer__menu-link--active{% endif %}">
                        {{ link.title }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
          {%- when 'text' -%}
            <div class="footer__column footer__column--text" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h2 class="footer__heading h5">{{ block.settings.heading | escape }}</h2>
              {%- endif -%}

              {%- if block.settings.text != blank -%}
                <div class="footer__text rte">{{ block.settings.text }}</div>
              {%- endif -%}
            </div>
          {%- when 'newsletter' -%}
            <div class="footer__column footer__column--newsletter" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h2 class="footer__heading h5">{{ block.settings.heading | escape }}</h2>
              {%- endif -%}

              {%- if block.settings.text != blank -%}
                <div class="footer__newsletter-text rte">{{ block.settings.text }}</div>
              {%- endif -%}

              {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter-form' -%}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="footer__newsletter-field">
                  <label class="visually-hidden" for="ContactFooter-email">{{ 'newsletter.label' | t }}</label>
                  <input
                    id="ContactFooter-email"
                    type="email"
                    name="contact[email]"
                    class="footer__newsletter-input"
                    value="{{ form.email }}"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    {% if form.errors %}
                      aria-invalid="true"
                      aria-describedby="ContactFooter-error"
                    {% endif %}
                    placeholder="{{ 'newsletter.placeholder' | t }}"
                    required
                  >
                  <button type="submit" class="footer__newsletter-button" name="commit" aria-label="{{ 'newsletter.button_label' | t }}">
                    <span>{{ 'newsletter.button_label' | t }}</span>
                  </button>
                </div>
                {%- if form.errors -%}
                  <div class="footer__newsletter-error" id="ContactFooter-error">
                    <span class="visually-hidden">{{ 'general.accessibility.error' | t }}</span>
                    {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}
                  </div>
                {%- endif -%}
                {%- if form.posted_successfully? -%}
                  <div class="footer__newsletter-success">
                    {{ 'newsletter.success' | t }}
                  </div>
                {%- endif -%}
              {%- endform -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <div class="footer__bottom">
      <div class="footer__copyright">
        <small class="footer__copyright-text">&copy; {{ 'now' | date: '%Y' }} {{ shop.name | escape }}. {{ 'general.copyright' | t }}</small>
      </div>

      {%- if section.settings.show_payment_icons and shop.enabled_payment_types.size > 0 -%}
        <div class="footer__payment">
          <span class="visually-hidden">{{ 'general.payment.methods' | t }}</span>
          <ul class="footer__payment-icons list-unstyled">
            {%- for type in shop.enabled_payment_types -%}
              <li class="footer__payment-icon">
                {{ type | payment_type_svg_tag: class: 'icon' }}
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_company_info",
      "default": true,
      "label": "Show company info"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "default": 100,
      "unit": "px",
      "label": "Logo width"
    },
    {
      "type": "richtext",
      "id": "company_description",
      "label": "Company description"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": true,
      "label": "Show social icons"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "default": true,
      "label": "Show payment icons"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Quick links",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Share store details, promotions, or brand content with your customers.</p>",
          "label": "Text"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Subscribe to our emails",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Be the first to know about new collections and exclusive offers.</p>",
          "label": "Text"
        }
      ]
    }
  ],
  "default": {
    "settings": {},
    "blocks": [
      {
        "type": "link_list",
        "settings": {}
      },
      {
        "type": "text",
        "settings": {}
      },
      {
        "type": "newsletter",
        "settings": {}
      }
    ]
  }
}
{% endschema %}

