<div class="hero-section" style="padding: 60px 20px; text-align: center; background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%); color: white;">
  <div style="max-width: 1200px; margin: 0 auto;">
    <h1 style="font-size: 3rem; margin-bottom: 20px; font-weight: bold;">
      {{ section.settings.heading | default: "Welcome to SimGolf" }}
    </h1>
    <p style="font-size: 1.2rem; margin-bottom: 30px; opacity: 0.9;">
      {{ section.settings.subheading | default: "Experience the future of indoor golf" }}
    </p>
    {% if section.settings.button_label %}
      <a href="#" style="display: inline-block; background: #ff6b35; color: white; padding: 15px 30px; text-decoration: none; border-radius: 5px; font-weight: bold; transition: background 0.3s;">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to SimGolf"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Experience the future of indoor golf"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}